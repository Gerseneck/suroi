{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "outDir": "./dist",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "strict": true,
    "paths": {
      "@common/*": ["../common/src/*"]
    }
  },
  "include": [
    "src",
    "../common/src"
  ]
}
