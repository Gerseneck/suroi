{
  "name": "suroi",
  "version": "0.29.0",
  "description": "An open-source 2D battle royale game inspired by surviv.io.",
  "scripts": {
    "build": "cd client && bun build",
    "start": "cd server && bun start",
    "dev": "bun -r dev",
    "dev:client": "cd client && bun dev",
    "dev:server": "cd server && bun dev",
    "dev:test": "cd tests && bun stressTest",
    "watch:server": "cd server && tsc --noEmit --watch",
    "updateConfigSchema": "cd server && bun updateConfigSchema",
    "lint": "eslint . --fix",
    "lint:check": "eslint .",
    "lint:ci": "eslint . --max-warnings 0",
    "validateDefinitions": "cd tests && bun validateDefinitions",
    "validateSvgs": "cd tests && bun validateSvgs",
    "fullReinstall": "rm -r node_modules bun.lock client/node_modules server/node_modules common/node_modules tests/node_modules && bun install",
    "fullReinstallWin": "del /f /s /q node_modules\\* bun.lock client\\node_modules\\* server\\node_modules\\* common\\node_modules\\* tests\\node_modules\\* & bun install"
  },
  "keywords": [
    "bun",
    "typescript",
    "battle-royale",
    "io-game",
    "pixijs"
  ],
  "license": "GPL-3.0",
  "devDependencies": {
    "@eslint/js": "^9.35.0",
    "@stylistic/eslint-plugin": "^4.4.1",
    "@types/node": "^22.18.1",
    "eslint": "^9.35.0",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.43.0"
  },
  "workspaces": ["client", "common", "server", "tests"],
  "trustedDependencies": [
    "@parcel/watcher",
    "@swc/core",
    "skia-canvas",
    "unrs-resolver"
  ]
}
